@section Scripts {
    @Scripts.Render("~/bundles/app")
    @Scripts.Render("~/bundles/portfolioviewer")
}

<div class="row">
    <div id="divLogin" class="col-md-6" style="display:none">
        <h3>Log In</h3>
        <form id="formLogin" data-bind="submit: login">
            <div class="form-group">
                <label>Client</label>
                <input class="form-control" type="text" data-bind="value: userName" required />
            </div>
            <div class="form-group">
                <label>Password</label>
                <input class="form-control" type="password" data-bind="value: loginPassword" required />
            </div>
            <div class="form-group">
                <button type="submit" class="btn btn-default">Log In</button>
            </div>
        </form>
    </div>

    <div id="divPortfolio" style="display:none">
        @RenderPage("/Views/Portfolios.cshtml")
    </div>

    <div id="divSecurity" style="display:none">
        <table id="securityDataTable" class="table table-bordered table-responsive table-striped">
            <tr>
                <th>Name</th>
                <th>Symbol</th>
                <th>Stock Exchange</th>
                <th>Open</th>
                <th>Previous Close</th>
                <th>Last Trade Price</th>
                <th>Dividend</th>
                <th>Days Low</th>
                <th>Days High</th>
                <th>Year Low</th>
                <th>Year High</th>
            </tr>
        </table>
    </div>
</div>

<script>
    $(document).ready(function () {
        loadIndexPage()
    });
</script>
